# Define simulation parameters
units metal
atom_style atomic
dimension 3
boundary p p p
newton on

# Define atom coordinates
read_data <path_to_atoms>
mass 1 108

# Define potential and atom types
#    params = {'pair_style': 'eam/fs',
#   'pair_coeff': ['* * Ag-Ni.eam.fs Ag'], }#'tmp_dir': 'lmptd', 'keep_tmp_files': True}
#   'pair_coeff': ['* * Ag-Ni.eam.fs Ag Ni'], }
pair_style eam/fs
pair_coeff * * <path_to_potential> <specs>

# Define minimization parameters
min_style cg
minimize 1.0e-7 1.0e-7 1000 1000

# Run the simulation
run 0
write_data <path_to_res>